<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:context=".Activity.ReadPostActivity">

    <LinearLayout
        android:id="@+id/Read_Post_note"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/Read_Post_notetop"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Read_Post_noteTitle"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/Read_Post_noteName"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="7.5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="7.5dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Read_Post_notetop2"
            android:layout_width="match_parent"
            android:layout_height="301dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Read_Post_noteDate"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="7.5dp" />

            <TextView
                android:id="@+id/Read_Post_noteContent"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:layout_margin="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Read_Post_noteAddComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/Read_Post_input_Comment"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/Read_Post_Comment_Btn"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="Add" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Read_Post_noteList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/Read_Post_noteListComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <!--    여기까지 게시글 화면-->

    <LinearLayout
        android:id="@+id/Read_Post_vote"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/Read_Post_votetop"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Read_Post_voteTitle"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/Read_Post_voteName"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="7.5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="7.5dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Read_Post_votetop2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Read_Post_voteDate"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="7.5dp" />

            <TextView
                android:id="@+id/Read_Post_voteContent"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="10dp" />


            <!--            여기서 체크리스트 ll.add처럼 자바에서 추가할 수 있는지 봐야함-->

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/Read_Post_vote_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/Read_Post_vote_setBtn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="180dp"
                android:layout_marginRight="50dp"
                android:text="선택" />

            <Button
                android:id="@+id/Read_Post_vote_ResultBtn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="290dp"
                android:layout_marginRight="20dp"
                android:text="결과보기"
                />

        </RelativeLayout>


    </LinearLayout>


    <!--    여기까지 투표화면-->

    <LinearLayout
        android:id="@+id/Read_Post_schedule"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/Read_Post_scheduletop"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Read_Post_scheduleTitle"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/Read_Post_scheduleName"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="7.5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="7.5dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Read_Post_scheduletop2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Read_Post_scheduleDate"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="7.5dp" />

            <TextView
                android:id="@+id/Read_Post_scheduleContent"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/Read_Post_schedule_CalDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp" />

            <CalendarView
                android:id="@+id/Read_Post_schedule_Cal"
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:layout_weight="1"

                android:focusedMonthDateColor="#ff0000"

                android:selectedWeekBackgroundColor="#ffff00"
                android:showWeekNumber="false"
                android:unfocusedMonthDateColor="#0000ff"
                android:weekSeparatorLineColor="#00ff00" />


        </LinearLayout>


    </LinearLayout>



</LinearLayout>
