<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_main">
    <PreferenceCategory android:title="앱 정보">

    <EditTextPreference
        android:defaultValue="Default value"
        android:key="edit_text_preference_1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="앱 버전"
        android:text="엡 버전"/>

    <EditTextPreference
        android:defaultValue="Default value"
        android:key="edit_text_preference_2"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="공지사항"
        android:title="공지사항" />

     <EditTextPreference
         android:defaultValue="Default value"
         android:key="edit_text_preference_3"
         android:selectAllOnFocus="true"
         android:singleLine="true"
         android:text="커뮤니티 이용규칙"
         android:title="커뮤니티 이용규칙" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/ringtone_alignment"
            android:entryValues="@array/ringtone_alignment"
            android:key="list_preference_1"
            android:title="알림설정"
            android:text="알림 설정"/>


    </PreferenceCategory>

    <PreferenceCategory android:title="계정 설정">
        <EditTextPreference
            android:defaultValue="Default value"
            android:key="edit_text_preference_4"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:text="로그아웃"
            android:title="로그아웃" />
    </PreferenceCategory>

</PreferenceScreen>